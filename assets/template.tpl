<html>
<head>
	<meta charset="utf-8" />
	<title>Calhangator</title>
	<link rel="stylesheet" href="assets/style.css" />
</head>
<body>
	<div class="page nexus6">
	  <div class="phone">
		<div class="wa-container">
		  <div class="wrapperchat">
			<div class="chat-root">
			  <div class="user-bar">
				<div class="back">
				  <i class="zmdi zmdi-arrow-left"></i>
				</div>
				<!-- user info start -->
				<div class="user">
				  <img src="{profile_picture}" alt="user" />
				</div>
				<div class="user-name">
				  <b>{him_fullname}</b>
				  <span>çevrimiçi</span>
				</div>
				<!-- user info end -->
				<div class="actions more">
				  <i class="zmdi zmdi-more-vert"></i>
				</div>
				<div class="actions attachment">
				  <i class="zmdi zmdi-attachment-alt"></i>
				</div>
				<div class="actions">
				  <i class="zmdi zmdi-phone"></i>
				</div>
			  </div>
			  <div class="chat-window">
				<!-- conversation start -->
				<div class="conversation">
				  <div class="balloon you">
					Sa. {him_firstname} kardesim ben {you_name} koln e geldim seninle tanismak istiyordum ama buralarda değilmissin
					<span class="data blue">18:21</span>
				  </div>
				  <div class="balloon him">
					Taniyamadim sizi
					<span class="data">20:50</span>
				  </div>
				  <div class="balloon him second">
					Ne icin tanismak istiyorsunuz ? Ben sizi tanimiyorum
					<span class="data">20:51</span>
				  </div>
				  <div class="balloon you">
					Sevdigim icin tanismak istedim.
					<span class="data blue">20:52</span>
				  </div>
				  <div class="balloon you second">
					{you_job}
					<span class="data blue">20:52</span>
				  </div>
				  <div class="balloon him">
					nummerami kimden
					<span class="data">20:52</span>
				  </div>
				  <div class="balloon him second">
					Aldiniz
					<span class="data">20:52</span>
				  </div>
				  <div class="balloon you">
					Kardes
					<span class="data blue">20:53</span>
				  </div>
				  <div class="balloon you">
					Sileriz
					<span class="data blue">20:53</span>
				  </div>
				  <div class="balloon you">
					Sikinti yapma
					<span class="data blue">20:53</span>
				  </div>
				  <div class="balloon him second">
					kimden aldiniz
					<span class="data">20:53</span>
				  </div>
				  <div class="balloon him second">
					sikinti yok
					<span class="data">20:53</span>
				  </div>
				</div>
				<!-- conversation end -->
				<div class="textarea">
				  <div class="emoticons"></div>
				  <textarea class="message" name="message" placeholder="Bir mesaj yaz"></textarea>
				  <div class="photo">
					<i class="zmdi zmdi-camera"></i>
				  </div>
				  <div class="send-mic">
					<div class="circle-cont">
					  <i class="zmdi zmdi-mic"></i>
					</div>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		  <div class="bottom-bar">
			<div class="triangle">
			  <i class="zmdi zmdi-triangle-up"></i>
			</div>
			<div>
			  <i class="zmdi zmdi-circle-o"></i>
			</div>
			<div>
			  <i class="zmdi zmdi-square-o"></i>
			</div>
		  </div>
		</div>
	  </div>
	</div>
	<a href="https://github.com/om3rcitak/calhangator" target="_blank">
		<img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png">
	</a>
</body>
</html>